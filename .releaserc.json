{
  "branches": ["main"],
  "repositoryUrl": "https://github.com/hyphaene/markdown-viewer",
  "tagFormat": "v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/sync-versions.js ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "src-tauri/target/release/bundle/dmg/*.dmg",
            "label": "Markdown Viewer macOS DMG (${nextRelease.version})"
          },
          {
            "path": "src-tauri/target/release/bundle/macos/*.app.tar.gz",
            "label": "Markdown Viewer macOS App (${nextRelease.version})"
          },
          {
            "path": "src-tauri/target/release/bundle/appimage/*.AppImage",
            "label": "Markdown Viewer Linux AppImage (${nextRelease.version})"
          },
          {
            "path": "src-tauri/target/release/bundle/deb/*.deb",
            "label": "Markdown Viewer Linux DEB (${nextRelease.version})"
          }
        ],
        "successComment": false,
        "failComment": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "src-tauri/Cargo.toml",
          "src-tauri/tauri.conf.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
