{
  "branches": ["main"],
  "repositoryUrl": "https://github.com/hyphaene/markdown-viewer",
  "tagFormat": "v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/sync-versions.cjs ${nextRelease.version} && pnpm tauri build --target aarch64-apple-darwin && pnpm tauri build --target x86_64-apple-darwin"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "src-tauri/target/aarch64-apple-darwin/release/bundle/dmg/*.dmg",
            "label": "Markdown Viewer macOS ARM64 DMG"
          },
          {
            "path": "src-tauri/target/x86_64-apple-darwin/release/bundle/dmg/*.dmg",
            "label": "Markdown Viewer macOS x64 DMG"
          }
        ],
        "successComment": false,
        "failComment": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "src-tauri/Cargo.toml",
          "src-tauri/tauri.conf.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
